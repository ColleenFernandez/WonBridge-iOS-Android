<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <include layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lyt_charge"
            style="@style/MypageContainerStyle">

            <TextView
                style="@style/MypageLabelStyle"
                android:text="@string/charge"/>

            <ImageView
                android:id="@+id/imv_promember"
                style="@style/MypageValueStyle"
                android:src="@drawable/left_arrow"
                android:scaleType="fitEnd"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_vip"
            android:layout_marginTop="6dp"
            style="@style/MypageContainerStyle">

            <TextView
                style="@style/MypageLabelStyle"
                android:text="@string/charge_vip"/>

            <ImageView
                style="@style/MypageValueStyle"
                android:src="@drawable/left_arrow"
                android:scaleType="fitEnd"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_online"
            android:layout_marginTop="6dp"
            style="@style/MypageContainerStyle">

            <TextView
                style="@style/MypageLabelStyle"
                android:text="@string/charge_online"/>

            <ImageView
                style="@style/MypageValueStyle"
                android:src="@drawable/left_arrow"
                android:scaleType="fitEnd"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>