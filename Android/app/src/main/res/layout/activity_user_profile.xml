<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".timeline.UserProfileActivity"    android:focusable="true"    android:focusableInTouchMode="true"    android:orientation="vertical"    android:id="@+id/lyt_container"    android:descendantFocusability="blocksDescendants"    android:background="#f2f2f2">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="@dimen/top_height"        android:background = "@color/colorPrimary"        android:paddingLeft="7dp">        <ImageView            android:id="@+id/imv_back"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:padding="@dimen/pad_10"            android:src="@drawable/button_back"/>        <TextView            android:id="@+id/txv_profile_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:gravity="center"            android:layout_centerVertical="true"            android:text="@string/profile"            android:textColor="@color/white"            android:textSize="18sp"/>    </RelativeLayout>    <ScrollView        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:scrollbars="none">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <!--User Profile View-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="84dp"                android:orientation="horizontal"                android:gravity="center_vertical"                android:background="#fff">                <ImageView                    android:id="@+id/imv_photo"                    android:layout_width="60dp"                    android:layout_height="60dp"                    android:layout_marginLeft="10dp"                    android:background="@drawable/img_user"                    android:layout_gravity="center_vertical"/>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_marginLeft="25dp"                    android:orientation="vertical"                    android:gravity="center_vertical">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:gravity="center_vertical">                        <TextView                            android:id="@+id/txv_username"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:textColor="@color/timelinecell_color1"                            android:layout_gravity="center_vertical"                            android:textSize="16sp"/>                        <ImageView                            android:id="@+id/imv_sex"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginLeft="5dp"                            android:layout_gravity="center_vertical"                            android:background="@drawable/sex_selector"/>                    </LinearLayout>                    <TextView                        android:id="@+id/txv_userid"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:maxLines="1"                        android:text="@string/user_haoma"                        android:textColor="@color/timelinecell_color2"                        android:layout_marginTop="10dp"                        android:textSize="14sp"/>                </LinearLayout>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="8dp"                android:orientation="vertical">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal"                    android:paddingLeft="10dp"                    android:paddingRight="10dp"                    android:paddingTop="6dp"                    android:background="#fff">                    <LinearLayout                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:text="@string/relationship"                            android:textColor="@color/timelinecell_color1"                            android:textSize="14sp"/>                        <TextView                            android:id="@+id/txv_friendState"                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:textColor="@color/timelinecell_color2"                            android:textSize="13sp"/>                    </LinearLayout>                    <LinearLayout                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp">                        <TextView                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:text="@string/user_country"                            android:textColor="@color/timelinecell_color1"                            android:textSize="14sp"/>                        <LinearLayout                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:gravity="center_vertical">                            <TextView                                android:id="@+id/txv_country"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:maxLines="1"                                android:textColor="@color/timelinecell_color2"                                android:textSize="13sp"/>                            <ImageView                                android:id="@+id/imv_flag"                                android:layout_marginLeft="4dp"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_gravity="bottom"/>                        </LinearLayout>                    </LinearLayout>                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal"                    android:paddingLeft="10dp"                    android:paddingRight="10dp"                    android:paddingTop="10dp"                    android:paddingBottom="6dp"                    android:background="#fff">                    <LinearLayout                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:text="@string/working"                            android:textColor="@color/timelinecell_color1"                            android:textSize="14sp"/>                        <TextView                            android:id="@+id/txv_working"                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:textColor="@color/timelinecell_color2"                            android:textSize="13sp"/>                    </LinearLayout>                    <LinearLayout                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp">                        <TextView                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:text="@string/interest"                            android:textColor="@color/timelinecell_color1"                            android:textSize="14sp"/>                        <TextView                            android:id="@+id/txv_interest"                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:textColor="@color/timelinecell_color2"                            android:textSize="13sp"/>                    </LinearLayout>                </LinearLayout>                <View                    android:layout_width="match_parent"                    android:layout_height="0.4dp"                    android:background="@color/grey"/>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="horizontal"                    android:padding="10dp"                    android:background="#fff">                    <LinearLayout                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:text="@string/register_day"                            android:textColor="@color/timelinecell_color1"                            android:textSize="14sp"/>                        <TextView                            android:id="@+id/txv_regDate"                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:textColor="@color/timelinecell_color2"                            android:textSize="13sp"/>                    </LinearLayout>                    <LinearLayout                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_marginLeft="10dp"                        android:layout_height="wrap_content">                        <TextView                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:text="@string/recent_connect"                            android:textColor="@color/timelinecell_color1"                            android:textSize="14sp"/>                        <TextView                            android:id="@+id/txv_lastLogin"                            android:layout_width="0dp"                            android:layout_weight="1"                            android:layout_height="wrap_content"                            android:maxLines="1"                            android:textColor="@color/timelinecell_color2"                            android:textSize="13sp"/>                    </LinearLayout>                </LinearLayout>            </LinearLayout>            <LinearLayout                android:id="@+id/lyt_activity"                android:layout_width="match_parent"                android:layout_height="84dp"                android:layout_marginTop="8dp"                android:background="#fff"                android:padding="10dp">                <TextView                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="@string/activity"                    android:textColor="@color/timelinecell_color1"                    android:textSize="14sp"                    android:layout_gravity="center_vertical"/>                <android.support.v7.widget.RecyclerView                    android:id="@+id/recycler_image"                    android:layout_width="0dp"                    android:layout_weight="3"                    android:layout_height="match_parent"/>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="8dp"                android:background="#fff"                android:padding="10dp">                <TextView                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="@string/location2"                    android:textColor="@color/timelinecell_color1"                    android:textSize="14sp"/>                <TextView                    android:id="@+id/txv_location"                    android:layout_width="0dp"                    android:layout_weight="3"                    android:layout_height="wrap_content"                    android:textColor="@color/timelinecell_color2"                    android:textSize="13sp"/>            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="0.4dp"                android:background="@color/grey"/>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#fff"                android:padding="10dp">                <TextView                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="@string/school"                    android:textColor="@color/timelinecell_color1"                    android:textSize="14sp"/>                <TextView                    android:id="@+id/txv_school"                    android:layout_width="0dp"                    android:layout_weight="3"                    android:layout_height="wrap_content"                    android:textColor="@color/timelinecell_color2"                    android:textSize="13sp"/>            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="0.4dp"                android:background="@color/grey"/>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#fff"                android:padding="10dp">                <TextView                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="@string/home_village"                    android:textColor="@color/timelinecell_color1"                    android:textSize="14sp"/>                <TextView                    android:id="@+id/txv_village"                    android:layout_width="0dp"                    android:layout_weight="3"                    android:layout_height="wrap_content"                    android:textColor="@color/timelinecell_color2"                    android:textSize="13sp"/>            </LinearLayout>        </LinearLayout>    </ScrollView>    <!--Bottom Layout-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="8dp"        android:orientation="vertical"        android:background="@color/white">        <!--Top Layout-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="19dp"            android:orientation="horizontal">            <!--Free Call-->            <LinearLayout                android:id="@+id/lyt_freeCall"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:id="@+id/imv_phone_call"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:src="@drawable/phone_selector"/>                <TextView                    android:id="@+id/txv_phone_call"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_horizontal"                    android:layout_marginTop="10dp"                    android:text="@string/free_call"                    android:textColor="@drawable/color_selector2"/>            </LinearLayout>            <!--Video Chatting-->            <LinearLayout                android:id="@+id/lyt_videoChat"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:orientation="vertical">                <ImageView                    android:id="@+id/imv_video_call"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:src="@drawable/video_selector"/>                <TextView                    android:id="@+id/txv_video_call"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:layout_marginTop="10dp"                    android:text="@string/video_chat"                    android:textColor="@drawable/color_selector2"/>            </LinearLayout>            <!--Chatting-->            <LinearLayout                android:id="@+id/lyt_chatting"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:id="@+id/imv_message"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:src="@drawable/chat_selector"/>                <TextView                    android:id="@+id/txv_message"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:layout_gravity="center"                    android:text="@string/chatting"                    android:textColor="@drawable/color_selector2"/>            </LinearLayout>        </LinearLayout>        <!--Bottom Layout-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginTop="19dp"            android:layout_marginBottom="10dp">            <!--Gift-->            <LinearLayout                android:id="@+id/lyt_gift"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:orientation="vertical">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:src="@drawable/icon_gift"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:layout_marginBottom="10dp"                    android:layout_marginTop="10dp"                    android:text="@string/gift"                    android:textColor="@color/text2"/>            </LinearLayout>            <!--Add or Delete Friend-->            <FrameLayout                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content">                <!--delete Friend-->                <LinearLayout                    android:id="@+id/lyt_delFriend"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical">                    <ImageView                        android:id="@+id/imv_adddelete_friend"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="center"                        android:src="@drawable/friend_selector"/>                    <TextView                        android:id="@+id/txv_adddelete_friend"                        android:layout_width="wrap_content"                        android:layout_height="match_parent"                        android:layout_gravity="center"                        android:layout_marginTop="10dp"                        android:text="@string/delete_friend"                        android:textColor="@color/text2"/>                </LinearLayout>                <!--add Friend-->                <LinearLayout                    android:id="@+id/lyt_addFriend"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:orientation="vertical"                    android:visibility="invisible">                    <ImageView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_gravity="center"                        android:src="@drawable/icon_add_friend"/>                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="match_parent"                        android:layout_gravity="center"                        android:layout_marginTop="10dp"                        android:text="@string/add_friend"                        android:textColor="@color/text2"/>                </LinearLayout>            </FrameLayout>            <!--Block-->            <LinearLayout                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:orientation="vertical"                android:visibility="invisible">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:src="@drawable/icon_add_friend"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_gravity="center"                    android:layout_marginTop="10dp"                    android:text="@string/block"                    android:textColor="@color/text2"/>            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>