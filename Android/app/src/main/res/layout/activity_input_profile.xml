<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:id="@+id/lyt_container"    android:background="@color/white"    android:focusable="true"    android:focusableInTouchMode="true">    <include  layout="@layout/header"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="vertical">        <FrameLayout            android:id="@+id/flt_photo"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:layout_margin="30dp">            <de.hdodenhof.circleimageview.CircleImageView                android:id="@+id/imv_photo"                android:layout_width="100dp"                android:layout_height="100dp"                android:scaleType="centerCrop"                android:src="@drawable/img_user"/>            <ImageView                android:id="@+id/imv_camera"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="right|bottom"                android:background="@drawable/button_img_camera_userimfor"/>        </FrameLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="16dp"            android:layout_marginRight="12dp"            android:layout_marginTop="12dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/user_id"  />            <TextView                android:id="@+id/txv_email"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:textColor="#333333"                android:maxLines="1"                android:paddingLeft="9dp"                android:ellipsize="end"                android:textSize="16sp"/>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="12dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/nickname"  />            <EditText                android:id="@+id/edt_nickname"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:singleLine="true"                android:textSize="16sp"                android:maxLength="15"                android:textColor="@color/text"                android:paddingLeft="9dp"                android:theme="@style/MyEditTextTheme"/>            <TextView                android:id="@+id/txv_conflict"                android:layout_width="0dp"                android:layout_weight="0"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:textColor="@color/white"                android:textSize="16sp"                android:text="@string/confirm_conflict"                android:gravity="center"                android:paddingTop="6dp"                android:paddingBottom="6dp"                android:paddingLeft="8dp"                android:paddingRight="8dp"                android:visibility="gone"                android:background="@drawable/blue_roundrect"/>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="12dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/sex"  />            <FrameLayout                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/txv_sex"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:textColor="#333333"                    android:gravity="center_vertical"                    android:textSize="16sp"                    android:paddingLeft="9dp"                    android:text="@string/select_sex"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textColor="#333333"                    android:layout_gravity="right"                    android:gravity="center"                    android:textSize="16sp"                    android:layout_marginRight="36dp"                    android:text=">"/>            </FrameLayout>        </LinearLayout>        <LinearLayout            android:id="@+id/lyt_pwd"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="12dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/password"  />            <EditText                android:id="@+id/edt_pwd"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:inputType="textPassword"                android:maxLength="15"                android:singleLine="true"                android:textSize="16sp"                android:textColor="@color/text"                android:paddingLeft="9dp"                android:theme="@style/MyEditTextTheme"/>        </LinearLayout>        <LinearLayout            android:id="@+id/lyt_pwd_confirm"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="12dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/confirm_pwd"  />            <EditText                android:id="@+id/edt_pwd_confirm"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:inputType="textPassword"                android:singleLine="true"                android:textSize="16sp"                android:textColor="@color/text"                android:paddingLeft="9dp"                android:theme="@style/MyEditTextTheme"/>        </LinearLayout>    </LinearLayout>    <TextView        android:id="@+id/txv_register"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center_horizontal"        android:textColor="@color/white"        android:layout_margin="24dp"        android:textSize="18sp"        android:text="@string/ok"        android:gravity="center"        android:paddingTop="10dp"        android:paddingBottom="10dp"        android:paddingLeft="60dp"        android:paddingRight="60dp"        android:background="@drawable/blue_roundrect"/></LinearLayout>