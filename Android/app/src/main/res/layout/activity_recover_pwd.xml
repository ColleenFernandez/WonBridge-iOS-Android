<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:id="@+id/lyt_container"    android:background="@color/white">    <include  layout="@layout/header"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_horizontal"        android:text="@string/recover_note"        android:layout_marginTop="30dp"        android:textColor="#333"        android:textSize="16sp"/>    <EditText        android:id="@+id/edt_phone"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="32dp"        android:layout_marginRight="32dp"        android:layout_marginTop="32dp"        android:gravity="center"        android:singleLine="true"        android:inputType="textEmailAddress"        android:hint="@string/input_phone_email"        android:textColorHint="@color/hinttext"        android:textSize="16sp"        android:textColor="@color/text"        android:paddingLeft="16dp"        android:theme="@style/MyEditTextTheme"/>    <LinearLayout        android:id="@+id/lyt_country"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="32dp"        android:paddingRight="32dp"        android:layout_marginTop="16dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/select_country"            android:textColor="#333"            android:textSize="16sp"/>        <TextView            android:id="@+id/txv_country"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="wrap_content"            android:gravity="center"            android:textColor="#333"            android:paddingRight="12dp"            android:paddingTop="4dp"            android:paddingBottom="4dp"            android:layout_marginLeft="16dp"            android:text="中国"            android:textSize="16sp"            android:background="@color/light_gray"            android:drawableRight="@drawable/left_arrow"/>    </LinearLayout>    <TextView        android:id="@+id/txv_error"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:layout_marginTop="7dp"        android:textColor="@color/error_color"        android:text="@string/exist_nickname"/>    <FrameLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginTop="10dp">        <TextView            android:id="@+id/txv_sendcode"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:text="@string/send_code"            android:textColor="#333"            android:textSize="16sp"            android:paddingLeft="32dp"            android:paddingRight="32dp"            android:paddingTop="10dp"            android:paddingBottom="10dp"            android:background="@drawable/lightgray_roundrect"/>        <TextView            android:id="@+id/txv_ok"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:text="@string/ok"            android:textColor="#fff"            android:textSize="16sp"            android:paddingLeft="32dp"            android:paddingRight="32dp"            android:paddingTop="10dp"            android:paddingBottom="10dp"            android:background="@drawable/blue_roundrect"/>    </FrameLayout>        </LinearLayout>