<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"     android:layout_width="match_parent"     android:layout_height="wrap_content"    android:paddingTop="15dp"    android:paddingBottom="15dp">    <FrameLayout        android:layout_width="48dp"        android:layout_height="48dp"        android:layout_marginLeft="10dp">        <de.hdodenhof.circleimageview.CircleImageView            android:id="@+id/imv_userprofile"            android:layout_width="42dp"            android:layout_height="42dp"            android:layout_gravity="center"            android:src="@drawable/img_user"/>        <ImageView            android:id="@+id/imv_flag"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="bottom|right"/>        <ImageView            android:id="@+id/imv_flag2"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>    </FrameLayout>    <LinearLayout        android:id="@+id/lyt_timeline_content"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:orientation="vertical"        android:focusable="true"        android:focusableInTouchMode="true">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center_vertical">            <TextView                android:id="@+id/txv_nickname"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="16sp"                android:textColor="@color/blue_color"                android:maxLines="1"/>        </LinearLayout>        <LinearLayout            android:id="@+id/lyt_timeline_text"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="vertical">            <TextView                android:id="@+id/txv_timeline"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="9dp"                android:textSize="14sp"                android:textColor="@color/timelinecell_color1"                android:maxLines="3"/>            <TextView                android:id="@+id/txv_alltext"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingTop="3dp"                android:paddingBottom="3dp"                android:text="@string/content_all"                android:textColor="@color/blue_color"                android:textSize="12sp"                android:visibility="gone"/>        </LinearLayout>        <TextView            android:id="@+id/txv_link"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:textColor="@color/white"            android:textSize="12sp"            android:layout_gravity="center_horizontal"            android:text="@string/link"            android:paddingLeft="16dp"            android:paddingRight="16dp"            android:paddingTop="4dp"            android:paddingBottom="4dp"            android:layout_marginLeft="-30dp"            android:layout_marginTop="10dp"            android:background="#009688"/>        <android.support.v7.widget.RecyclerView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:id="@+id/grid_timeline_image" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="10dp">            <LinearLayout                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1" >                <ImageView                    android:id="@+id/imv_location"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:src="@drawable/icon_here"/>                <TextView                    android:id="@+id/txv_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="7dp"                    android:textColor="@color/timelinecell_color2"                    android:textSize="11sp"                    android:text="1min"/>                <TextView                    android:id="@+id/txv_distance"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="7dp"                    android:textColor="@color/timelinecell_color2"                    android:textSize="11sp"                    android:text="10Km"/>            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginRight="12dp"                android:layout_marginLeft="14dp">                <TextView                    android:id="@+id/txv_likeCount"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="23"                    android:drawableLeft="@drawable/icon_like"                    android:textSize="11sp"                    android:drawablePadding="7dp"/>                <TextView                    android:id="@+id/txv_msgCount"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="14dp"                    android:text="5"                    android:drawableLeft="@drawable/icon_leave_massage"                    android:textSize="11sp"                    android:drawablePadding="7dp"/>            </LinearLayout>        </LinearLayout>        <LinearLayout            android:id="@+id/lyt_response"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginRight="12dp"            android:layout_marginTop="10dp"            android:padding="8dp"            android:background="@drawable/timeline_text_back"            android:orientation="vertical">            <TextView                android:id="@+id/txv_like_users"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textColor="@color/blue_color"                android:textSize="14sp"                android:drawableLeft="@drawable/icon_like"                android:layout_marginBottom="2dp"                android:maxLines="1"                android:ellipsize="end"                android:drawablePadding="4dp"/>            <TextView                android:id="@+id/txv_response1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="4dp"                android:textColor="@color/blue_color"                android:textSize="14sp"                android:maxLines="1"                android:ellipsize="end"/>            <TextView                android:id="@+id/txv_response2"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="6dp"                android:textColor="@color/blue_color"                android:textSize="14sp"                android:maxLines="1"                android:ellipsize="end"/>        </LinearLayout>    </LinearLayout></LinearLayout>