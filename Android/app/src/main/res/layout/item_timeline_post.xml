<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"     android:orientation="vertical"     android:layout_width="match_parent"     android:layout_height="78dp"     android:focusable="true"     android:focusableInTouchMode="true">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="78dp">        <LinearLayout            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="match_parent"            android:layout_marginLeft="16dp"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center_vertical">                <TextView                    android:id="@+id/txv_timeline"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_marginTop="8dp"                    android:textSize="12sp"                    android:lines="2"                    android:maxLines="2"/>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="12dp">                <ImageView                    android:id="@+id/imv_location"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center"                    android:src="@drawable/icon_here"/>                                <TextView                    android:id="@+id/txv_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textColor="@color/timelinecell_color2"                    android:textSize="11sp"                    android:layout_marginLeft="7dp"                    android:text="1min"/>                <TextView                    android:id="@+id/txv_distance"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="7dp"                    android:textColor="@color/timelinecell_color2"                    android:textSize="11sp"                    android:text="10Km"/>                <TextView                    android:id="@+id/txv_likeCount"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="14dp"                    android:text="23"                    android:textSize="11sp"                    android:drawableLeft="@drawable/icon_like"                    android:drawablePadding="7dp"/>                <TextView                    android:id="@+id/txv_msgCount"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="14dp"                    android:text="5"                    android:textSize="11sp"                    android:drawableLeft="@drawable/icon_leave_massage"                    android:drawablePadding="7dp"/>            </LinearLayout>                    </LinearLayout>        <ImageView            android:id="@+id/imv_userprofile"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_marginTop="12dp"            android:layout_marginLeft="12dp"            android:layout_marginRight="12dp"            android:scaleType="centerCrop"/>    </LinearLayout></LinearLayout>