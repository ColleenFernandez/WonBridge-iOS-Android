<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:id="@+id/lyt_container"    android:background="@color/white"    android:focusable="true"    android:focusableInTouchMode="true">    <include  layout="@layout/header"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:textColor="#333333"        android:textSize="16sp"        android:layout_margin="24dp"        android:text="@string/register_complete"  />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="vertical">        <FrameLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:layout_margin="16dp">            <de.hdodenhof.circleimageview.CircleImageView                android:id="@+id/imv_photo"                android:layout_width="100dp"                android:layout_height="100dp"                android:scaleType="centerCrop"/>        </FrameLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="16dp"            android:layout_marginRight="12dp"            android:layout_marginTop="16dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/user_id"  />            <TextView                android:id="@+id/txv_email"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:textColor="#333333"                android:textSize="16sp"                android:paddingLeft="9dp"                android:text="test01@gmail.com"/>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="16dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/nickname"  />            <TextView                android:id="@+id/txv_nickname"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:singleLine="true"                android:textSize="16sp"                android:textColor="@color/text"                android:paddingLeft="9dp"/>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="16dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/sex"  />            <TextView                android:id="@+id/txv_sex"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:textColor="#333333"                android:textSize="16sp"                android:paddingLeft="9dp"/>        </LinearLayout>        <LinearLayout            android:id="@+id/lyt_pwd"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="16dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/password"  />            <TextView                android:id="@+id/txv_pwd"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:textColor="#333333"                android:paddingLeft="9dp"                android:textSize="16sp"                android:text="1234****"  />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginRight="20dp"            android:layout_marginTop="16dp"            android:gravity="center_vertical">            <TextView                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/location"  />            <TextView                android:id="@+id/txv_countryname"                android:layout_width="0dp"                android:layout_weight="3"                android:layout_height="wrap_content"                android:paddingLeft="9dp"                android:textColor="#333333"                android:textSize="16sp" />        </LinearLayout>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="36dp">        <TextView            android:id="@+id/txv_update"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:textColor="#333333"            android:textSize="18sp"            android:text="@string/update_profile"            android:gravity="center"            android:paddingTop="10dp"            android:paddingBottom="10dp"            android:background="@drawable/lightgray_roundrect"/>        <TextView            android:id="@+id/txv_ok"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:textColor="@color/white"            android:layout_marginLeft="24dp"            android:textSize="18sp"            android:text="@string/ok"            android:gravity="center"            android:paddingTop="10dp"            android:paddingBottom="10dp"            android:background="@drawable/blue_roundrect"/>    </LinearLayout></LinearLayout>