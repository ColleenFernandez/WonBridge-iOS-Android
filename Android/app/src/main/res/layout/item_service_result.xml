<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_result_photo"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/imv_user_photo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/img_user"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_result_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时尚家居"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#464646"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/imv_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_flag_flat_cn"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txv_result_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="接各种装修策划，\n设计一条龙服务！ 拷贝"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:maxLines="2"
                android:textColor="#949494"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/light_gray"/>


</LinearLayout>
