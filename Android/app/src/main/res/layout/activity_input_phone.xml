<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:id="@+id/lyt_container"    android:background="@color/white">    <include  layout="@layout/header"/>    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_horizontal"        android:text="@string/phone_note"        android:layout_marginTop="30dp"        android:textColor="#333"        android:textSize="16sp"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="32dp"        android:paddingRight="32dp"        android:layout_marginTop="40dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/select_country"            android:textColor="#333"            android:textSize="16sp"/>        <TextView            android:id="@+id/txv_country"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="wrap_content"            android:gravity="center"            android:textColor="#333"            android:paddingRight="12dp"            android:paddingTop="4dp"            android:paddingBottom="4dp"            android:layout_marginLeft="16dp"            android:text="中国"            android:textSize="16sp"            android:background="@color/light_gray"            android:drawableRight="@drawable/left_arrow"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:layout_marginRight="32dp"        android:layout_marginLeft="32dp"        android:layout_marginTop="20dp"        android:orientation="vertical"        android:focusableInTouchMode="true"        android:focusable="true">        <FrameLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <EditText                android:id="@+id/edt_phone"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center"                android:singleLine="true"                android:maxLength="20"                android:inputType="phone"                android:hint="@string/input_phone"                android:textColorHint="@color/hinttext"                android:textSize="16sp"                android:textColor="@color/text"                android:paddingLeft="24dp"                android:theme="@style/MyEditTextTheme"/>            <TextView                android:id="@+id/txv_countrycode"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:text="+86"                android:paddingLeft="28dp"                android:paddingBottom="8dp"                android:textColor="#333"                android:textSize="16sp"/>        </FrameLayout>        <EditText            android:id="@+id/edt_code"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="12dp"            android:gravity="center"            android:singleLine="true"            android:maxLength="6"            android:inputType="numberDecimal"            android:hint="@string/input_code"            android:textColorHint="@color/hinttext"            android:textSize="16sp"            android:textColor="@color/text"            android:paddingLeft="9dp"            android:theme="@style/MyEditTextTheme"/>        <TextView            android:id="@+id/txv_error"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center"            android:layout_marginTop="7dp"            android:textColor="@color/error_color"            android:text="@string/exist_nickname"            android:visibility="invisible"/>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:layout_marginLeft="32dp"            android:layout_marginRight="32dp"            android:layout_marginTop="10dp">            <TextView                android:id="@+id/txv_sendcode"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:textColor="#333333"                android:textSize="16sp"                android:text="@string/send"                android:gravity="center"                android:paddingTop="10dp"                android:paddingBottom="10dp"                android:background="@drawable/lightgray_roundrect"/>            <TextView                android:id="@+id/txv_ok"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:textColor="@color/white"                android:layout_marginLeft="24dp"                android:textSize="16sp"                android:text="@string/ok"                android:gravity="center"                android:paddingTop="10dp"                android:paddingBottom="10dp"                android:background="@drawable/blue_roundrect"/>        </LinearLayout>        <TextView            android:id="@+id/txv_next"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_horizontal"            android:layout_marginBottom="24dp"            android:text="@string/next"            android:textColor="#333333"            android:textSize="16sp"            android:paddingLeft="32dp"            android:paddingRight="32dp"            android:paddingTop="10dp"            android:paddingBottom="10dp"            android:background="@drawable/blue_roundrect2"/>            </LinearLayout>    <TextView        android:id="@+id/txv_agree"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center_horizontal"        android:layout_marginBottom="30dp"        android:textSize="14sp"        android:text="@string/agree_terms"        android:textColor="@color/hinttext"/></LinearLayout>