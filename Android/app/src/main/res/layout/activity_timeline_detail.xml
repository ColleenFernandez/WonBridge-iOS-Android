<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".timeline.UserProfileActivity"    android:focusable="true"    android:focusableInTouchMode="true"    android:orientation="vertical"    android:id="@+id/lyt_container">    <FrameLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <include  layout="@layout/header"/>        <TextView            android:id="@+id/txv_list"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="right|center_vertical"            android:layout_marginRight="16dp"            android:text="@string/timeline_list"            android:textColor="#333333"            android:textSize="16sp"            android:paddingLeft="24dp"            android:paddingRight="24dp"            android:paddingTop="8dp"            android:paddingBottom="8dp"            android:background="@drawable/lightgray_roundrect"            android:visibility="gone"/>    </FrameLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="130dp"        android:orientation="vertical"        android:background="@drawable/background_userprofile">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="20dp"            android:layout_marginBottom="20dp">                <ImageView                    android:id="@+id/imv_photo"                    android:layout_width="90dp"                    android:layout_height="90dp"                    android:layout_marginLeft="20dp"                    android:background="@drawable/img_user"/>            <LinearLayout                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="match_parent"                android:orientation="vertical">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_marginLeft="20dp"                    android:gravity="center_vertical">                    <TextView                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content"                        android:singleLine="true"                        android:text="@string/recent_connect"                        android:textColor="@color/text1"                        android:textSize="12sp"/>                    <TextView                        android:id="@+id/txv_lastLogin"                        android:layout_width="0dp"                        android:layout_weight="2"                        android:layout_height="wrap_content"                        android:singleLine="true"                        android:textColor="@color/white"                        android:textSize="12sp"/>                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_marginLeft="20dp"                    android:gravity="center_vertical">                    <TextView                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content"                        android:singleLine="true"                        android:text="@string/status"                        android:textColor="@color/text1"                        android:textSize="12sp"/>                    <TextView                        android:id="@+id/txv_friendState"                        android:layout_width="0dp"                        android:layout_weight="2"                        android:layout_height="wrap_content"                        android:singleLine="true"                        android:textColor="@color/white"                        android:textSize="12sp"/>                </LinearLayout>                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_marginLeft="20dp"                    android:layout_marginRight="16dp"                    android:gravity="center_vertical">                    <TextView                        android:id="@+id/txv_regtime"                        android:layout_width="0dp"                        android:layout_weight="1"                        android:layout_height="wrap_content"                        android:singleLine="true"                        android:textColor="@color/white"                        android:textSize="12sp"/>                    <TextView                        android:id="@+id/txv_address"                        android:layout_width="0dp"                        android:layout_weight="2"                        android:layout_height="wrap_content"                        android:textColor="@color/white"                        android:textSize="12sp"/>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </LinearLayout>    <ScrollView        android:id="@+id/scrollview"        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:fadingEdgeLength="0dp"        android:fillViewport="true"        android:overScrollMode="never"        android:scrollbars="none">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <TextView                android:id="@+id/txv_content"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="16dp"                android:layout_marginTop="10dp"                android:layout_marginRight="16dp"                android:layout_marginBottom="10dp"                android:textSize="16sp"                android:autoLink="web"/>            <android.support.v7.widget.RecyclerView                android:id="@+id/recycler_image"                android:layout_width="match_parent"                android:layout_height="120dp"/>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:paddingLeft="24dp"                android:paddingRight="24dp"                android:paddingTop="4dp"                android:paddingBottom="4dp"                android:gravity="center_vertical">                <TextView                    android:id="@+id/txv_likeCount"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center_vertical"                    android:textSize="12sp"                    android:text="23"                    android:drawableLeft="@drawable/icon_like"                    android:drawablePadding="4dp"/>                <TextView                    android:id="@+id/txv_msgCount"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:layout_marginLeft="16dp"                    android:gravity="center_vertical"                    android:textSize="12sp"                    android:text="5"                    android:drawableLeft="@drawable/icon_leave_massage"                    android:drawablePadding="4dp"/>                <FrameLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                    <ImageView                        android:id="@+id/imv_like"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:background="@drawable/like_selector"/>                    <TextView                        android:id="@+id/txv_delete"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="@string/delete_timeline"                        android:textSize="14sp"                        android:padding="4dp"                        android:visibility="gone"/>                </FrameLayout>            </LinearLayout>            <LinearLayout                android:id="@+id/lyt_like_users"                android:layout_width="match_parent"                android:layout_height="48dp"                android:paddingLeft="24dp"                android:paddingRight="24dp"                android:gravity="center_vertical"                android:visibility="gone">                <android.support.v7.widget.RecyclerView                    android:id="@+id/recycler_like_users"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="match_parent"                    />                <TextView                    android:id="@+id/txv_like_members"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"/>            </LinearLayout>            <View                android:layout_width="match_parent"                android:layout_height="6dp"                android:background="#f2f2f2"                android:layout_marginTop="4dp"                android:layout_marginBottom="4dp"/>            <com.julyseven.wonbridge.utils.NonScrollListView                android:id="@+id/lst_responds"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:scrollbars="none"                android:dividerHeight="0dp"                android:divider="@color/transparent"/>        </LinearLayout>    </ScrollView>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/background_input_img_chat"        android:paddingLeft="8dp"        android:paddingBottom="8dp"        android:paddingTop="8dp">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:orientation="horizontal"            android:layout_marginRight="@dimen/pad_10"            android:background="@drawable/input_search">            <EditText                android:id="@+id/edt_message"                android:layout_width="0dp"                android:layout_weight="1"                android:layout_height="wrap_content"                android:background="@null"                android:layout_gravity="center"                android:maxLines="3"                android:maxLength="200"/>            <ImageView                android:id="@+id/imv_send_text"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="@dimen/pad_5"                android:layout_gravity="center"                android:padding="@dimen/pad_5"                android:src="@drawable/send_selector"/>        </LinearLayout>    </LinearLayout></LinearLayout>